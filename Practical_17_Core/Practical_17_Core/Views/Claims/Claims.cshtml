@model UserClaimsViewModel

<a class="btn btn-outline-dark mb-1" asp-action="Details" asp-route-id="@Model.UserId"><i class="bi bi-arrow-left me-2"></i>Back</a>
<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="card">
        <div class="card-header">
            <h2>Edit User Claims</h2>
        </div>
        <div class="card-body">
            @if (Model.Claims is not null && Model.Claims.Count() > 0)
            {
                @for (int i = 0; i < Model.Claims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                        <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                            @Model.Claims[i].ClaimType
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-dark" style="width:auto" />
        </div>
    </div>
</form>